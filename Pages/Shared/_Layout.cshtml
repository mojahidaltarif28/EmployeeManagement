<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>

<body>
    <div class="main-container">
        <div class="left-nav">
            <div class="elements">
                <div class="nav-item">
                    <a asp-page="/Index"><i class="bi bi-house-fill"></i>Home</a>
                </div>
                <div class="nav-item">
                    <a asp-page="/Index"><i class="bi bi-person-fill"></i>Employees</a>
                </div>
                <div class="nav-item">
                    <a asp-page="/Customers/AddEmployee"><i class="bi bi-plus-circle"></i>Add Employee</a>
                </div>
            </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer>
        <div class="text-center">
            &copy; Copyright 2024
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>